{
  "compilerOptions": {
    "target": "es2020",
    "module":"commonjs",
    "moduleResolution":"node",
    "preserveConstEnums": true,
    "sourceMap": false,
    "declaration": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "outDir": "./lib",
    "forceConsistentCasingInFileNames": true, 
    "skipLibCheck": true,
    "strict": true,
    "lib": [ "es2015", "DOM"],
    "types": [ "node" ],
    "typeRoots": [ "./node_modules/@types" ]
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}